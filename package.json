{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "lint-staged": {
    "src/**/*.ts": "bash -c 'npm run check-types'",
    "src/**/*.+(js|ts|json)": "npm run check-lint",
    "src/**/*.+(js|ts|json|md)": "npm run check-format"
  },
  "scripts": {
    "dev": "ts-node-dev src/index.ts",
    "prod": "NODE_ENV=production ts-node src/index.ts",
    "build": "NODE_ENV=production tsc",
    "docker-dev": "sh compose-dev.sh",
    "docker-prod": "sh compose-prod.sh",
    "check-types": "tsc -p ./tsconfig.json --pretty --noEmit",
    "check-format": "prettier --check src",
    "check-lint": "eslint src --ext ts --ext js",
    "check-all": "npm run check-format && npm run check-lint && npm run check-types",
    "format": "prettier --write .",
    "codegen": "graphql-codegen --config codegen.yml && prettier --write src/graphql/types/generated.ts"
  },
  "author": "",
  "license": "ISC",
  "_moduleAliases": {
    "@": ".",
    "@/config": "src/config",
    "@/gql": "src/graphql",
    "@/gql/types": "src/graphql/types",
    "@/gql/resolvers": "src/graphql/resolvers",
    "@/db": "src/db",
    "@/lib": "src/lib"
  },
  "dependencies": {
    "@graphql-tools/load-files": "^6.5.3",
    "@graphql-tools/merge": "^8.2.6",
    "@graphql-tools/schema": "^8.3.6",
    "@types/bcryptjs": "^2.4.2",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.17.3",
    "express-graphql": "^0.12.0",
    "graphql": "^15.8.0",
    "graphql-modules": "^2.0.0",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "mongoose": "^6.2.10"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^3.1.1",
    "@graphql-codegen/cli": "2.6.2",
    "@graphql-codegen/graphql-modules-preset": "^2.3.8",
    "@graphql-codegen/typescript": "2.4.8",
    "@graphql-codegen/typescript-document-nodes": "2.2.8",
    "@graphql-codegen/typescript-mongodb": "2.3.6",
    "@graphql-codegen/typescript-resolvers": "2.6.1",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "dotenv": "^16.0.0",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "prettier": "^2.6.2",
    "ts-node": "^10.7.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.3"
  }
}
