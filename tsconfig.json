{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "build",
    "baseUrl": ".",
    "paths": {
      "@": ["./*"],
      "@/config/*": ["./src/config/*"],
      "@/gql/*": ["./src/graphql/*"],
      "@/gql/types/*": ["src/graphql/types/*"],
      "@/gql/resolvers/*": ["./src/graphql/resolvers/*"],
      "@/db/*": ["./src/db/*"],
      "@/lib/*": ["./src/lib/*"],
    }
  },
  "include": ["src/**/*"]
}
